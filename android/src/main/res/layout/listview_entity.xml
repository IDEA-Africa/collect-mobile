<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"

        android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/nodeSummaryAttributesContainer"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/nodeModifiedOnLabel">
        <!--to be filled programmatically -->
    </LinearLayout>

    <TextView
        android:id="@+id/nodeModifiedOnLabel"
        android:layout_width="100dp"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/nodeStatus"
        android:gravity="center_horizontal" />

    <ImageView
            android:id="@+id/nodeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dip"
            android:layout_toLeftOf="@id/nodeSelectedForAction"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="end"/>

    <CheckBox
            android:id="@+id/nodeSelectedForAction"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"/>

</RelativeLayout>